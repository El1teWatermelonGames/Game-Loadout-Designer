<Page
    x:Class="Game_Loadout_Designer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Game_Loadout_Designer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#1B1B1B">

    <Grid>
        <Border Margin="300,0,0,0" Background="#252525" CornerRadius="50,0,0,50">
        </Border>
        
        
        <!-- Button Selections -->
        
        <Button x:ConnectionId='2' x:Name="BF2042" Content="Battlefield 2042" Margin="10,10,0,0" VerticalAlignment="Top" Width="128" Background="#FF1B1B1B" BorderThickness="0,0,0,3" BorderBrush="White" FocusVisualSecondaryBrush="#99000000" FocusVisualPrimaryBrush="#FF0084FF" Foreground="White"                     />
        <Button x:ConnectionId='3' x:Name="CODMWII22" Content="COD MW II (2022)" Margin="160,10,0,0" VerticalAlignment="Top" Width="128" Background="#FF1B1B1B" BorderThickness="0,0,0,3" BorderBrush="White" FocusVisualSecondaryBrush="#99000000" FocusVisualPrimaryBrush="#FF0084FF" Foreground="White"                        />

        
        <!-- Designer Menus -->

        <Grid x:ConnectionId='4' x:Name="BF2042Grid" Margin="365,0,0,0" Visibility="Collapsed">
            <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Battlefield 2042 Loadout Designer" VerticalAlignment="Top" FontSize="24"/>
        </Grid>
        
        <Grid x:ConnectionId='5' x:Name="CODMWII22Grid" Margin="365,0,0,0" Visibility="Collapsed">
            <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Call of Duty Modern Warfare 2 (2022) Loadout Designer" VerticalAlignment="Top" FontSize="24"/>
        </Grid>
    </Grid>
</Page>

